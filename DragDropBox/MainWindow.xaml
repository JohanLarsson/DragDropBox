<Window x:Class="DragDropBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dragDropBox="clr-namespace:DragDropBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.DataContext>
        <dragDropBox:ViewModel />
    </Window.DataContext>
    <UniformGrid Columns="2" Rows="2">
        <ContentPresenter Content="{Binding Foo1}"
                          DragEnter="OnDragEnter"
                          Drop="OnDrop"
                          MouseLeftButtonDown="OnMouseLeftButtonDown" />
        <ContentPresenter Content="{Binding Foo2}"
                          DragEnter="OnDragEnter"
                          Drop="OnDrop"
                          MouseLeftButtonDown="OnMouseLeftButtonDown" />
        <ContentPresenter Content="{Binding Foo3}"
                          DragEnter="OnDragEnter"
                          Drop="OnDrop"
                          MouseLeftButtonDown="OnMouseLeftButtonDown" />
        <ContentPresenter Content="{Binding Foo4}"
                          DragEnter="OnDragEnter"
                          Drop="OnDrop"
                          MouseLeftButtonDown="OnMouseLeftButtonDown" />
    </UniformGrid>
</Window>
